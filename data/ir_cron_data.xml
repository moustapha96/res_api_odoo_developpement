<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.cron" forcecreate="True" id="rest_api_delete_expired_tokens">
            <field name="name">rest_api: Delete expired tokens</field>
            <field name="model_id" ref="model_rest_api_access_token" />
            <field name="state">code</field>
            <field name="code">model._cron_delete_expired_tokens()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="priority">3</field>
            <field name="doall" eval="False" />
            <field name="active" eval="True" />
        </record>


        <record id="ir_cron_check_overdue_payments" model="ir.cron">
            <field name="name">Notifications pour les paiements en retard : Commande à crédit</field>
            <field name="model_id" ref="model_sale_order" />
            <field name="state">code</field>
            <field name="code">model.check_overdue_payments_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="active" eval="True" />
        </record>
    </data>
</odoo>