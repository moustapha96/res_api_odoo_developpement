<odoo>
    <data>

          <record id="view_product_form_inherit_images" model="ir.ui.view">
            <field name="name">product.template.form.inherit.all</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">


                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="department_code" />
                    <field name="reference_auto" readonly="1" />
                </xpath>


                <xpath expr="//page[@name='variants']" position="after">
                    <page name="images" string="Images du produit">
                        <group string="Images">
                            <field name="image_1" widget="image" class="oe_avatar" />
                            <field name="image_2" widget="image" class="oe_avatar" />
                            <field name="image_3" widget="image" class="oe_avatar" />
                            <field name="image_4" widget="image" class="oe_avatar" />
                        </group>
                    </page>
                </xpath>

                <xpath expr="//page[@name='images']" position="after">
                    <page name="rang" string="Rang du produit">
                        <group string="Rang">
                            <field name="rang" />
                        </group>
                    </page>
                </xpath>

                <xpath expr="//page[@name='rang']" position="after">
                    <page name="comments" string="Commentaires">
                        <group string="Commentaires">
                            <field name="comment_ids">
                                <tree string="Commentaires">
                                    <field name="author" />
                                    <field name="text" />
                                    <field name="date" />
                                    <field name="review" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

        
        <record id="view_product_template_form_credit_button" model="ir.ui.view">
            <field name="name">product.template.form.credit.button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button
                        name="action_recompute_creditorder_price"
                        type="object"
                        string="Recalculer prix crédit"
                        class="btn-primary o_btn_recompute_credit_price"
                        attrs="{'invisible': [('standard_price', '=', 0.0)]}"
                        help="Forcer le recalcul du prix crédit à partir du coût (40% du standard_price)." />
                </xpath>
            </field>
        </record>


        <record id="server_action_recompute_credit_price_selection" model="ir.actions.server">
            <field name="name">Recalculer prix crédit</field>
            <field name="model_id" ref="product.model_product_template" />
            <field name="binding_model_id" ref="product.model_product_template" />
            <field name="binding_type">action</field> <!-- ajoute l'action dans le menu "Action" -->
            <field name="state">code</field>
            <field name="code">action = records.sudo().action_recompute_creditorder_price()</field>
        </record>

        <record id="view_product_template_form_credit_fields" model="ir.ui.view">
            <field name="name">product.template.form.credit.fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <!-- Insère un bloc après list_price -->
                <xpath expr="//field[@name='list_price']" position="after">
                    <group string="Prix à crédit">
                        <!-- <field name="creditorder_price" /> -->
                        <field name="creditorder_manual" />

                        <button name="action_set_creditorder_auto"
                            type="object"
                            string="Prix automatique"
                            class="oe_highlight"
                            attrs="{'invisible': [('creditorder_manual', '=', False)]}" />
                    </group>
                </xpath>
            </field>
        </record>


        <record id="view_product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <!-- On cible directement le header -->
                <xpath expr="//header" position="inside">
                    <button
                        name="regenerate_all_references"
                        string="Recalculer toutes les références"
                        type="object"
                        class="btn-primary"
                        context="{'active_model': 'product.template', 'active_ids': active_ids}"
                        help="Recalcule les références pour tous les produits." />
                </xpath>

            </field>
        </record>

    </data>
</odoo>