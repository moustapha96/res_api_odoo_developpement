        <record id="view_product_template_form_credit_fields" model="ir.ui.view">
            <field name="name">product.template.form.credit.fields</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <!-- Insère un bloc après list_price -->
                <xpath expr="//field[@name='list_price']" position="after">
                    <group string="Prix à crédit">
                        <!-- <field name="creditorder_price" /> -->
                        <field name="creditorder_manual" />
                       
                        <button name="action_set_creditorder_auto"
                            type="object"
                            string="Prix automatique"
                            class="oe_highlight"
                            attrs="{'invisible': [('creditorder_manual', '=', False)]}" />
                    </group>
                </xpath>
            </field>
        </record>

