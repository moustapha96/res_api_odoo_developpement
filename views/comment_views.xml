<odoo>
    <record id="view_comment_form" model="ir.ui.view">
        <field name="name">web.commentaire.form</field>
        <field name="model">web.commentaire</field>
        <field name="arch" type="xml">
            <form string="Commentaire">
                <sheet>
                    <group>
                        <field name="author" />
                        <field name="text" />
                        <field name="date" />
                        <field name="product_id" />
                        <field name="review" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>